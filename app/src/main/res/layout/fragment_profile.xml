<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.hardtask.testmobarkiya.fragments.ProfileFragment">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/imageCompanySubCat"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/table_view_no_img"
                app:civ_border_color="#FF000000" />

            <TextView
                android:id="@+id/txtNameCompanySubCat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#fff"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>


        </LinearLayout>


    </android.support.v7.widget.Toolbar>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_twitter"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:src="@drawable/twitter"
                    android:layout_marginRight="10dp"/>

                <ImageView
                    android:id="@+id/img_facebook"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:src="@drawable/facebook"
                    android:layout_marginRight="10dp"/>

                <ImageView
                    android:id="@+id/img_instagram"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:src="@drawable/instagram"
                    android:layout_margin="10dp"/>

                <ImageView
                    android:id="@+id/img_snapchat"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:src="@drawable/snabchat"
                    android:layout_marginRight="10dp"/>

                <ImageView
                    android:id="@+id/img_youtube"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:src="@drawable/youtube"
                    android:layout_marginRight="10dp"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/textColor">
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerViewProfileSubCat"
                android:layout_width="wrap_content"
                android:layout_height="100dp">
            </android.support.v7.widget.RecyclerView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/textColor">
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:orientation="vertical"
                android:gravity="end"
                android:padding="10dp">

                <TextView
                    android:id="@+id/txtSubscribeCompanySubCat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textColor"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:text="Company Description"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:gravity="end|center_vertical"
                    android:layout_marginTop="10dp">


                    <TextView
                        android:id="@+id/txtCallPhoneCompanySubCat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0123456789"
                        android:textSize="14sp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="bold"/>

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/icon_call" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:gravity="end|center_vertical"
                    android:layout_marginTop="10dp">


                    <TextView
                        android:id="@+id/txtWebSiteCompanySubCat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Company Website"
                        android:textSize="14sp"
                        android:textColor="@color/textColor"
                        android:textStyle="bold"/>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/icon_web" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:gravity="end|center_vertical"
                    android:layout_marginTop="10dp">


                    <TextView
                        android:id="@+id/txtEmailCompanySubCat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Company Email"
                        android:textSize="14sp"
                        android:textColor="@color/textColor"
                        android:textStyle="bold"/>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/icon_email" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:gravity="end|center_vertical"
                    android:layout_marginTop="10dp">


                    <TextView
                        android:id="@+id/txtAddressCompanySubCat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Company Location Address"
                        android:textSize="14sp"
                        android:textColor="@color/textColor"
                        android:textStyle="bold"/>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/icon_location" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/layoutGetMapsSubCat"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="5dp"
                    android:orientation="horizontal"
                    android:background="#FF9F9F9F">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/btn_icon_location"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="موقعنا"
                        android:fontFamily="@font/ge_dinar"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textColor="@color/textColor"
                        android:layout_marginEnd="5dp"
                        android:layout_marginStart="5dp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutGetCallSubCat"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:gravity="center|center_vertical"
                    android:orientation="horizontal"
                    android:background="@color/colorPrimary">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/call2"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="إتصال"
                        android:fontFamily="@font/ge_dinar"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textColor="@color/textColor"
                        android:layout_marginEnd="5dp"
                        android:layout_marginStart="5dp"/>

                </LinearLayout>



            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
